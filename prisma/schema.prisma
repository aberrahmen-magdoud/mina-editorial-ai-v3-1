generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomerCredit {
  customerId String   @id
  balance    Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AutoTopupSetting {
  customerId       String   @id
  enabled          Boolean
  monthlyLimitPacks Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Session {
  id         String   @id
  customerId String
  platform   String
  title      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  generations Generation[]
  feedbacks   Feedback[]

  @@index([customerId, createdAt])
}

model Generation {
  id         String   @id
  type       String
  sessionId  String?
  session    Session?  @relation(fields: [sessionId], references: [id])
  customerId String
  platform   String
  prompt     String
  outputUrl  String
  meta       Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  feedbacks  Feedback[]

  @@index([customerId, createdAt])
}

model Feedback {
  id           String   @id
  sessionId    String?
  session      Session?    @relation(fields: [sessionId], references: [id])
  generationId String?
  generation   Generation? @relation(fields: [generationId], references: [id])
  customerId   String
  resultType   String
  platform     String
  prompt       String
  comment      String
  imageUrl     String?
  videoUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([customerId, createdAt])
}
